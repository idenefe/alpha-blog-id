<h2 align="center">Title: <%=@article.title%></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="center">
    <strong>Description:</strong>
  </h4>
  <hr>
    <%=simple_format(@article.description)%>
    <section class="article-meta-details">
      <small>
        Created by: <%= if @article.user 
          @article.user.username
        else 
          "Guest"
        end%>
        <!--at: <%#= @article.created_at%>-->
        <%=time_ago_in_words(@article.created_at)%> ago<br>
        Last updated: <%=time_ago_in_words(@article.updated_at)%> ago
      </small>
    </section>
  <div class="article-actions">  
    <%=link_to 'Back to List', articles_path,class:"btn btn-success btn-md"%>
    <%=link_to 'Edit', edit_article_path(@article),class:"btn btn-primary btn-md" %>
    
    <%=link_to 'Delete this article', 
      article_path(@article), 
      method: :delete , 
      data:{confirm: "Are you sure??"},
      class:"btn btn-danger btn-md" 
    %>
    
  </div>
</div>